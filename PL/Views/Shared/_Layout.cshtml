<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="backgroungCard">

    <header>


        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light   bg-dark border-bottom box-shadow  text-bg-primary ">
            <div class="container">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a> *@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link   text-light btn-outline-danger rounded mx-1 " asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-hands-holding-child mr-3 "></i> <span class="font-weight-bold">Home</span> </a>
                        </li>
                        @* <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link   text-light btn-outline-danger rounded mx-1 " asp-area="" asp-controller="Father" asp-action="Index">Father</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link   text-light btn-outline-danger rounded mx-1" asp-area="" asp-controller="Mother" asp-action="Index">Mother</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link   text-light btn-outline-danger rounded mx-1" asp-area="" asp-controller="Personal" asp-action="Index">Childrens</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link   text-light btn-outline-danger rounded mx-1" asp-area="" asp-controller="Personal" asp-action="ReportedChildren">Reported Children</a>
                        </li>
                        
                        <li class="nav-item ml-auto ">
                            <a class="nav-link text-primary btn-outline-light rounded mx-1 font-weight-bold " asp-area="" asp-controller="User" asp-action="Index">Users <span class="ml-2"><i class="fa-solid fa-user-secret"></i></span> </a>
                        </li>
                        @* <li class="nav-item ml-auto ">
                            <a class="nav-link text-warning btn-outline-light rounded mx-1 font-weight-bold" asp-area="" asp-controller="Role" asp-action="Index">Roles <span class="ml-2"> <i class="fa-solid fa-wrench"></i> </span> </a>
                        </li>  *@
                        <li class="nav-item ml-auto">
                            <a class="nav-link text-danger btn-outline-light rounded mx-1 font-weight-bold" asp-area="" asp-controller="Account" asp-action="SignOut">Sign : <span class="ml-2"><i class="fa-solid fa-person-walking-dashed-line-arrow-right font-weight-bold"></i></span></i></a>
                        </li>

                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div >
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PL - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("ValidationScriptSection", required: false)
</body>
</html>
